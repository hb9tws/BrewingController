<brewingController:BindablePage
    x:Class="BrewingController.MashProgram"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:brewingController="using:BrewingController"
    mc:Ignorable="d"
    DataContext="{Binding MashProgram, Source={StaticResource Locator}}" >

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Orientation="Vertical" Margin="50">
            <TextBlock  Text="Mash Program" FontSize="64" Foreground="{ThemeResource ApplicationHeaderForegroundThemeBrush}" />
            <Button Content="Back" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="83" FontSize="32" Command="{Binding BackCommand, Mode=OneWay }" />
        </StackPanel>
    </Grid>
</brewingController:BindablePage>
